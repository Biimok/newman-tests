							"const response = pm.response.json();\r",
							"\r",
							"pm.test(\"Status estÃ¡ OK\", () => {\r",
							"    pm.expect(response.status).to.eql(\"OK\");\r",
							"})\r",
							"\r",
							"postman.setNextRequest(\"API Get List of Books\");"
						],
						"type": "text/javascript"
					}
				}
			],
